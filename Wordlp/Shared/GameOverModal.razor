<div class="modal-background" @onclick="OnClose"></div>

<div class="modal">
    <button class="close" type="button" @onclick="OnClose">
        <i class="fa-solid fa-close fa-lg" />
    </button>

    <div class="solution">@Game.Word.Value</div>
    <div class="modal-content">
        <p>@Game.Word.Description</p>
    </div>
</div>

@code {
    [CascadingParameter] private Game Game { get; set; } = null!;
    [Parameter] public EventCallback OnClose { get; set; }
}
