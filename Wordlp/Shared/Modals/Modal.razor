<div class="modal-background" @onclick="OnClose" @onclick:stopPropagation="true"></div>

<div class="modal-container" @onclick="OnClose" @onclick:stopPropagation="true">
    <div class="modal">
        <div class="close">
            <button type="button" @onclick="OnClose">
                <i class="fa-solid fa-close fa-lg"></i>
            </button>
        </div>

        @ChildContent
    </div>
</div> 

@code {

    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}