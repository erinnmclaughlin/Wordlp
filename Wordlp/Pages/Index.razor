@page "/"
@inject WordCollection WordCollection

<PageTitle>Word-LP</PageTitle>

@if (RandomWord != null)
{
    <div class="mb-3">
        <h3 class="text-lg font-bold tracking-wide">@RandomWord.Value</h3>
        <p>@RandomWord.Description</p>
    </div>
    
    <button class="py-1 px-2 bg-slate-300 rounded text-sm border border-slate-400" @onclick="GetRandomWord">Next Word</button>
}

@code {

    private Word? RandomWord { get; set; }

    protected override void OnInitialized()
    {
        GetRandomWord();
    }

    private void GetRandomWord()
    {
        RandomWord = WordCollection.GetRandomWord();
    }
}